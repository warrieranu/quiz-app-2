<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">Test Me: Super Easy FCE</a>
    <% if current_user %>
    <p>Signed in as: </p> 
    <%= current_user.name %> 
    <%= image_tag(@auth['info']['image'], width:'50', height:'50') %>
    <% else %>
    <button class="btn" type="button" data-toggle="modal" data-target="#popUpLogIn">Log in</button>
    <button class="btn btn-outline-success" data-toggle="modal" data-target="#popUpSignUp" type="button">Sign up for FREE</button>
    <div class="modal fade" id="popUpSignUp">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1>Sign up</h1>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <% provide(:title, 'Sign up') %>
                        <button class="btn" type"button">
                        <%= link_to "auth/facebook" do %>
                        <%=image_tag "facebook-login.png", width: '100%', height: '100%' %>
                        <% end %></button>
                        <%= form_for(@user) do |f| %>
                          <%= f.label :name, "Your Name"%>
                          <%= f.text_field :name, class: "form-control"%>
                    
                          <%= f.label :email, "Email" %>
                          <%= f.email_field :email, class: "form-control"%>
                    
                          <%= f.label :password, "Password" %>
                          <%= f.password_field :password, class: "form-control" %>
                    
                          <%= f.label :password_confirmation, "Confirm Password" %>
                          <%= f.password_field :password_confirmation, type: "password", class: "form-control"%>
                    
                          <%= f.submit "Create my FREE account!", class: "form-control btn btn-primary" %>
                        <% end %>
                    </div>
                </div>
                <div class="modal-footer">
                    <div>
                        <p>Already have an account?</p><br><br>
                    </div>
                    <div>
                        <a href="#popUpLogIn" data-toggle="modal" data-dismiss="modal">Log in</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
        <div class="modal fade" id="popUpLogIn">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1>Log up</h1>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <% provide(:title, 'Log in') %>
                        <%= form_for(@user) do |f| %>
                          <%= f.label :name, "Your Name"%>
                          <%= f.text_field :name, class: "form-control"%>
                    
                          <%= f.label :email, "Email" %>
                          <%= f.email_field :email, class: "form-control"%>
                    
                          <%= f.label :password, "Password" %>
                          <%= f.password_field :password, class: "form-control" %>
                    
                          <%= f.label :password_confirmation, "Confirm Password" %>
                          <%= f.password_field :password_confirmation, type: "password", class: "form-control"%>
                    
                          <%= f.submit "Create my FREE account!", class: "form-control btn btn-primary" %>
                        <% end %>
                    </div>
                </div>
                <div class="modal-footer">
                    <p>Already have an account?</p>
                    <a href="#popUpLogIn" data-toggle="modal" data-dismiss="modal">Log in</a>
                </div>
            </div>
        </div>
    </div>
    <% end %>
</nav>